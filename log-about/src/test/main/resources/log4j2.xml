<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30"
               status="off"
               name="RoutingTest"
               packages="log.slf4j.demo.maker.clszz.onep">
    <Properties>
        <Property name="filename">rollingtest-${sys:type}.log</Property>
    </Properties>
    <ThresholdFilter level="debug"/>
    <Appenders>
        <!-- Async Loggers will auto-flush in batches, so switch off immediateFlush. -->
<!--        <RandomAccessFile name="RandomAccessFile" fileName="async.log" immediateFlush="false" append="false">-->
        <RandomAccessFile name="RandomAccessFile" fileName="${filename}" immediateFlush="false" append="false">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m %ex%n %marker</Pattern>
            </PatternLayout>
        </RandomAccessFile>
        <Console name="STDOUT">
            <PatternLayout pattern="%m%n"/>
            <ThresholdFilter level="debug"/>
        </Console>
        <Routing name="Routing">
            <Routes pattern="$${sd:type}">
                <Route>
                    <RollingFile name="Rolling-${sys:type}" fileName="${filename}"
                                 filePattern="test1-${sys:type}.%i.log.gz">
                        <PatternLayout>
                            <pattern>%d %p %c{1.} [%t] %m%n</pattern>
                        </PatternLayout>
                        <SizeBasedTriggeringPolicy size="500"/>
                    </RollingFile>
                </Route>
                <Route ref="STDOUT" key="Audit"/>
            </Routes>
        </Routing>
    </Appenders>
    <Loggers>
        <Logger name="EventLogger" level="info" additivity="false">
            <AppenderRef ref="Routing"/>
        </Logger>
        <Logger name="log.slf4j.demo" level="ERROR" additivity="true" includeLocation="false">
<!--        <Logger name="log.slf4j.demo" level="${sys:level}" additivity="true">-->
<!--            <AppenderRef ref="Routing"/>-->
            <AppenderRef ref="RandomAccessFile"/>
        </Logger>

<!--        <Root level="error">-->
        <Root level="error">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>